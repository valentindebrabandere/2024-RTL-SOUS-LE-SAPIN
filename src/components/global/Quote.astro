---
import DynImage from "./DynImage.astro";

interface Props {
  slug: string;
  quote: string;
  author: string;
}

const { slug, quote, author } = Astro.props;
--- 

<blockquote class="c-quote">
  <DynImage
    imagePath={`/src/assets/images/quotes/${slug}.png`}
    altText=`Portrait de ${author}`
  />
  <div class="c-quote__content">
    <p>{quote}</p>
    <cite>{author}</cite>
  </div>
</blockquote>

<style lang="scss" is:global>
  .c-quote {
    display: grid;
    grid-template-columns: 1fr 1fr;
    place-items: center;

    box-sizing: border-box;

    margin: 0 auto;

    width: 100%;
    max-width: 1140px;
    

    img {
      height: auto;
      width: 100%;
      object-fit: contain;
    }


    .c-quote__content {
      display: flex;
      flex-direction: column;
      justify-content: center;

      font-size: 20px;
      line-height: 175%;

      gap: 24px;

      padding-top: 20%;
    }
    
    p{
      margin: 0;
      padding: 0;
    }

    cite{
        font-weight: 600;
    }
  }
</style>
