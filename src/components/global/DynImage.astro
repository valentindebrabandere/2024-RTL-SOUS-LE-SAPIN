---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
  className?: string;
  loading?: "lazy" | "eager";
  decoding?: "sync" | "async";

  width?: number;
  height?: number;
}

const { imagePath, altText, className, loading, decoding, width, height } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/**/*.{jpg,jpeg,png,gif,webp,svg}');

if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob`);
---

<Image
  src={images[imagePath]()}
  alt={altText}
  width={width}
  height={height}
  class={className}
  loading={loading}
  decoding={decoding}
/>
