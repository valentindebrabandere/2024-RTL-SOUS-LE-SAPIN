---
interface Props {
  title: string;
  phone?: string;
  email?: string;
}

const { title, phone, email } = Astro.props;
---

<li class="c-contacts__item">
  <h4 class="c-contacts__name">{title}</h4>

  {email && (
    <a href={`mailto:${email}`} class="c-contacts__email">
      {email}
    </a>
  )}

  {phone && (
    <a href={`tel:${phone}`} class="c-contacts__phone">
      {phone}
    </a>
  )}
</li>

<style lang="scss" is:global>
  .c-contacts__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;

    max-width: 550px;
    text-align: center;
  }

  .c-contacts__name {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0;
  }

  .c-contacts__email,
  .c-contacts__phone {
    font-size: 1.2rem;
    text-decoration: none;
    color: inherit;
    position: relative;

    &::before {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 1.5px;
      background-color: var(--color-dark-300);
      transition: width 0.3s ease-out;
    }

    &:hover::before {
      width: 100%;
    }
  }
</style>